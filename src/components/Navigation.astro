---
const pathname = new URL(Astro.request.url).pathname

function getActiveTailWind (link) {
	return pathname === link ? 'itemActive' : 'item'
}
---
<nav class='nav'>
	<ul class='list'>
		<li class='item'><a href='/' class={getActiveTailWind('/')}>Home</a></li>
		<li class='item'><a href='/hello' class={getActiveTailWind('/hello')}>Hello</a></li>
	</ul>
</nav>

<style>
	.nav {
		background-color: #3b82f6;
		padding: 0.5rem;
	}
	.list {
    display: flex;
    justify-content: space-around;
		list-style: none;
		padding: 0;
	}
	.item {
    color: white;
    text-decoration: none;
	}
	.itemActive {
    text-decoration: none;
		font-weight: bold;
		color: #f59e0b;
	}
</style>